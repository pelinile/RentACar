        Tüm Araçlar
    </a>
    <div class="collapse" id="category-menu" style="max-width: 250px;">

        @foreach (var c in Model)
        {
            <a asp-controller="Home" asp-action="Index" asp-route-categoryId="@c.Id" asp-route-categoryName="@c.Name" class="list-group-item list-group-item-secondary">@c.Name</a>
        }
    </div>
</div>


